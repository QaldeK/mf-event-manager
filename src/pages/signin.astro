---
import Layout from "../layouts/Layout.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return redirect("/dashboard");
}
---

<Layout title="Connexion">
  <div class="flex justify-center items-center h-screen">

  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h1 class="text-3xl mb-4">Connexion</h1>
    <p class="text-gray-700">Nouveau par ici ? <a class="text-blue-500" href="/register">Se cr√©er un compte</a></p>
    <form class="space-y-4" action="/api/auth/signin" method="post">
      <div class="space-y-2">
        <label class="block text-gray-700 text-lg font-bold mb-2" for="email">Email</label>
        <input class="border border-gray-300 rounded p-2 w-full" type="email" name="email" id="email" />
      </div>
      <div class="space-y-2">
        <label class="block text-gray-700 text-lg font-bold mb-2" for="password">Mot de passe</label>
        <input class="border border-gray-300 rounded p-2 w-full" type="password" name="password" id="password" />
      </div>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Se connecter</button>
    </form>
  </div>
  </div>
</Layout>










